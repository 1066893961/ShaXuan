<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.shaxuan">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />  <!-- 写入SD卡权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />    <!-- 在SD卡中创建和删除文件的权限 -->
    <application
        android:name=".CrashApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.AddMemberActivity" />
        <activity android:name=".ui.SelectAllMemberActivity" />
        <activity android:name=".ui.MemberInfoActivity" />
    </application>

</manifest>